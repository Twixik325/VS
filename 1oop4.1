/*Напишите метод, принимающий параметром массив чисел, и который будет возвращать минимальное значение, 
максимальное значение и среднее значение среди положительных элементов массива. 
Необходимо  сделать это двумя способами: через out параметры и при помощи кортежа. */
Random rnd = new Random();
int[] arr1 = new int[20];
Console.WriteLine("Начальный массив:");
for (int i = 0; i < arr1.Length; i++)
{
    arr1[i] = rnd.Next(-10, 10);
    Console.Write(arr1[i] + " ");
}
Arrator(arr1, out int min, out int max, out double mid);
static void Arrator(int[] arr1, out int min, out int max, out double mid)
{
    max = -10;
    min = 10;
    int sum = 0;
    int count = 0;
    for (int i = 0; i < arr1.Length; i++)
    {
        if (arr1[i] > max) max = arr1[i];
        if (arr1[i] < min) min = arr1[i];
        if (arr1[i] >= 0)
        {
            sum += arr1[i];
            count++;
        }
    }
    mid = (double)sum / (double)count;
    Console.WriteLine("\nМинимальный элемент массива:" + min);
    Console.WriteLine("Максимальный элемент массива:" + max);
    Console.WriteLine("Среднее значение положительных элементов массива:" + mid);
}
